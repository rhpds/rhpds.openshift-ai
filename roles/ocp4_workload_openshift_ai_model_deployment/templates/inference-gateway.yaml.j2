apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
 name: openshift-ai-inference
 namespace: openshift-ingress
spec:
 gatewayClassName: openshift-ai-inference
 listeners:
   - allowedRoutes:
       namespaces:
         from: Selector
         selector:
           matchExpressions:
             - key: kubernetes.io/metadata.name
               operator: In
               values:
                 - openshift-ingress
                 - redhat-ods-applications
                 - {{ ocp4_workload_openshift_ai_model_deployment_namespace }}
     hostname: inference-gateway.{{ _ocp4_workload_openshift_ai_model_deployment_ingress_domain }}
     name: https
     port: 443
     protocol: HTTPS
     tls:
       certificateRefs:
         - group: ''
           kind: Secret
           name: default-gateway-tls
       mode: Terminate